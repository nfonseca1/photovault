<% include partials/header.ejs %>

<h3><%=currentUser.username%>'s Account</h3>

<nav class="navbar navbar-expand-lg navbar-light bg-light" style="border: solid 1px #333333">
    <div class="navbar-nav">
        <a class="nav-item nav-link active" href="/account">Photos</a>
        <a class="nav-item nav-link" href="/account/following">Following <span class="sr-only">(current)</span></a>
        <a class="nav-item nav-link" href="#">Followers</a>
        <a class="nav-item nav-link" href="#">Messages</a>
        <a class="nav-item nav-link" href="#">Settings</a>
        <a class="nav-item nav-link" href="/logout">Logout</a>
    </div>
</nav>

<h3>Users that you follow</h3>

<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">Username</th>
        <th scope="col">Firstname</th>
        <th scope="col">Lastname</th>
    </tr>
    </thead>
    <tbody>
    <%myUser.following.forEach(function(follow){%>
        <tr>
            <td><%=follow.username%></td>
            <td><%=follow.firstName%></td>
            <td><%=follow.lastName%></td>
        </tr>
    <%});%>
    </tbody>
</table>

